{
    "manifest_version": 2,
    "name": "AIS Themes",
    "version": "0.0.2",
    "description": "Changes styles in AIS",

    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "24": "icons/icon.png",
            "32": "icons/icon.png"
        }
    },

    
    "web_accessible_resources": [
        "css/neon.css"
    ],
    "content_scripts": [
        {
            "matches": ["https://is.stuba.sk/*"],
            "js": ["js/loader.js"],
            "run_at": "document_start"
        }
    ],
    
    "background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

    "permissions": [
        "tabs",
        "storage",
		"activeTab",
        "unlimitedStorage"
    ]
}