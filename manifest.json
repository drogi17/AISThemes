{
    "manifest_version": 2,
    "name": "BetterAIS",
    "version": "0.0.2",
    "description": "Changes styles in AIS",
    "icons": {
        "15": "icons/icon.png",
        "32": "icons/icon.png",
        "64": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },

    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": "icons/icon.png"
    },

    
    "web_accessible_resources": [
        "css/neon.css"
    ],
    
    "content_scripts": [
        {
            "matches": ["https://is.stuba.sk/*"],
            "js": ["js/loader.js"],
            "run_at": "document_start"
        }
    ],
    
    "background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

    "permissions": [
        "tabs",
        "storage",
		"activeTab",
        "unlimitedStorage"
    ]
}